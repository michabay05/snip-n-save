{
    "name": "SnipSave",
    "description": "Save all your snippets in one place",
    "version": "0.1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "Delius-Regular.ttf",
                "Quattrocento-Regular.ttf",
                "Quattrocento-Bold.ttf"
            ],
            "matches": [ "*://*/*" ]
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "contextMenus"
    ]
}
