{
    "name": "SnipSave",
    "description": "Save all your snippets in one place",
    "version": "0.1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [ "fonts/*.ttf" ],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "contextMenus"
    ]
}
